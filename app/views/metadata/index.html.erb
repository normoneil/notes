<div class="page-header">
  <h1>
    Metadata
    <a href="/metadata/new" class="btn btn-lg btn-success">New Metadatum</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @metadata.each do |metadatum| %>
      <tr>
        <td>
          <a href="/metadata/<%= metadatum.id %>" class="btn btn-primary">Show</a>
          <a href="/metadata/<%= metadatum.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_metadatum/<%= metadatum.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
