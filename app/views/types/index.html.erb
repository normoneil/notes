<div class="page-header">
  <h1>
    Types
    <a href="/types/new" class="btn btn-lg btn-success">New Type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Note</th>
        <th>Body</th>
        <th>List</th>
        <th>Picture</th>
        <th>Actions</th>
      </tr>

      <% @types.each do |type| %>
      <tr>
        <td><%= type.note_id %></td>
        <td><%= type.body %></td>
        <td><%= type.list %></td>
        <td><img src='<%= type.picture %>' class='img-responsive'></td>
        <td>
          <a href="/types/<%= type.id %>" class="btn btn-primary">Show</a>
          <a href="/types/<%= type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_type/<%= type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
